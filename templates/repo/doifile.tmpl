<div id="datacite-view" class="ui container wide centered column">
	<h4 class="ui top attached header" >
		<i class="octicon octicon-squirrel"></i>
		<strong>datacite.yml</strong>
	</h4>

	<div class="ui attached table segment">
		<div class="ui container wide centered column markdown file-view">
			<div class="doi title">
				<h1>{{.DOIInfo.ResourceType}}: {{.DOIInfo.Title}}</h1>
				{{.DOIInfo.AuthorBlock}}
				<p><strong>License</strong> <a href="{{.DOIInfo.License.URL}}">{{.DOIInfo.License.Name}}</a></p>
			</div>
			<hr>

			{{if .DOIInfo.Description}}
				<h3>Description</h3>
				<p>{{.DOIInfo.Description}}</p>
			{{end}}

			{{if .DOIInfo.Keywords}}
				<h3>Keywords</h3>
				<p>| {{range $index, $kw := .DOIInfo.Keywords}} <a href="">{{$kw}}</a> | {{end}}</p>
		{{end}}

		{{if .DOIInfo.References}}
			<h3>References</h3>
			<ul class="doi itemlist">
				{{range $index, $ref := .DOIInfo.References}}
					<li>{{$ref.Name}} {{$ref.Citation}}{{if $ref.ID}} <a href={{$ref.GetURL}}>{{$ref.ID}}</a>{{end}}</li>
				{{end}}
			</ul>
		{{end}}

		{{if .DOIInfo.Funding}}
			<h3>Funding</h3>
			<ul class="doi itemlist">
				{{range $index, $ref := .DOIInfo.Funding}}
					<li>{{$ref}}</li>
				{{end}}
			</ul>
		{{end}}
		</div>
	</div>
</div>
